<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back" >

    <EditText
        android:id="@+id/edit_login_stu_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="8"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_login_stu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_login_stu_pwd"
        android:layout_alignLeft="@+id/edit_login_stu_pwd"
        android:layout_marginBottom="22dp"
        android:ems="8"
        android:hint="请输入学号" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_login_stu_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="登录" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:src="@drawable/ic_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_login_stu_pwd"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edit_login_stu_id"
        android:ems="10"
        android:text="默认密码与学号相同" />

</RelativeLayout>